@{
    ViewData["Title"] = "Reserva";
}

<div class="text-center">
    <h1 class="display-4"></h1>

    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">Vuelo: Guatemala - Barcelona</h5>            
            <div>
                <span>Fecha - Hora: 05/11/2022 - 17:00</span>
            </div>
            <div class="mt-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Asiento</th>
                            <th scope="col">Status</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>A1</td>
                            <td>
                                <span class="badge badge-success">Confirmado</span>
                            </td>
                            <td class="d-flex flex-row justify-content-center">
                                <div>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#EliminarAsientoModal">
                                        <i class="bi bi-trash3 text-white"></i>
                                    </button>
                                </div>
                            </td>

                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>A2</td>
                            <td>
                                <span class="badge badge-secondary">Reserva</span>
                            </td>
                            <td class="d-flex flex-row justify-content-center">
                                <div>
                                    <a class="btn btn-success text-white" href="">
                                        Confirmar
                                        <i class="bi bi-check-circle"></i>
                                    </a>
                                </div>
                            </td>

                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Ver Vuelo -->
    <div class="modal fade" id="EliminarAsientoModal" tabindex="-1" aria-labelledby="EliminarAsientoModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Eliminar Asiento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Esta seguro que quiere eliminar el asiento?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger">Si</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })

            $('#EliminarAsientoModal').on('shown.bs.modal', function () {
                $('#myInput').trigger('focus')
            })
        </script>
    }

</div>
