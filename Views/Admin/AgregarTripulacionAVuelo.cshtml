@model AgregarTripulacionVuelo

@{ Layout = "_LayoutAdmin"; }

@{
    ViewData["Title"] = "Admin";
}

<div class="text-center">
    <h1 class="display-4">Vuelos</h1>

    <form method="post" action="@Url.Action("GuardarTripulacionAsignada", "Admin")">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Agregar tripulación</h5>

                <div class="card-body d-flex ">
                    <input  type="text" value="@Model.idVuelo" name="vueloId" hidden/>

                    <div class="input-group flex-nowrap col-11">
                        <span class="input-group-text" id="addon-wrapping">
                            <i class="bi bi-award"></i>
                        </span>
                        <select class="form-select w-100" id="puesto" name="personaId" required>
                            <option value="" selected>Puesto...</option>
                            @foreach (var item in Model.ListadoTripulacion)
                            {
                                <option value="@item.Id">@item.Nombre @item.Apellido - @item.Tipo</option>
                            }
                        </select>
                    </div>

                    <div class="col-1">
                        <button class="btn btn-primary"> Agregar </button>
                    </div>

                </div>
            </div>
        </div>
    </form>

    <div class="text-center">
        <h1 class="display-4">Tripulación</h1>

        <div class="mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Email</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Puesto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListadoTripulacionAsignada)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Email</td>
                            <td>@item.Telefono</td>
                            <td>@item.Tipo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>